datum PoolState {
    PoolState {
        pair_a: Token,
        pair_b: Token,
    }
}

datum SwapParams {
    SwapParams {
        amount: Int,
        ratio: Int,
    }
}

party Buyer;

party Dex;

tx swap(
    ask: Token,
    bid: Token
) {
    input pool {
        from: dex,
        datum_is: PoolState,

        redeemer: SwapParams::SwapParams {
            ask: ask,
            bid: ask,
        },
    }
    
    input payment {
        from: buyer,
        min_amount: fees + bid,
    }
    
    output {
        to: pool,
        datum: PoolState::PoolState {
            pair_a: inputs.pool.pair_a - ask,
            pair_b: inputs.pool.pair_b + bid,
            ...inputs.pool.datum
        },
    }

    output {
        to: buyer,
        amount: inputs.payment.amount + ask - bid - fees,
    }
}