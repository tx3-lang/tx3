party MyParty;

type MyRecord {
    field1: Int,
    field2: Bytes,
}

type MyVariant {
    Case1 {
        field1: Int,
        field2: Bytes,
        field3: Int,
    },
    Case2,
}

policy OnlyHashPolicy = 0xABCDEF1234;

policy FullyDefinedPolicy {
    hash: 0xABCDEF1234,
    script: 0xABCDEF1234,
    ref: 0xABCDEF1234,
}

tx my_tx(
    quantity: Int
) {
    input source {
        from: MyParty,
        datum_is: MyRecord,
        min_amount: Ada(quantity),
        redeemer: MyVariant::Case1 {
            field1: 10,
            field2: 0xAFAFAF,
            field3: quantity,
        },
    }

    output {
        to: MyParty,
        datum: MyRecord {
            field1: quantity,
            field2: 54,
        },
    }
}
