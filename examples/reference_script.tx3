party Sender;

party Receiver;

tx transfer(
    quantity: Int
) {
    input source {
        from: Sender,
        min_amount: Ada(quantity),
    }
    
    cardano::output {
        to: Receiver,
        amount: Ada(quantity),
        ref_script: {
          version: 3,
          script: 0x5101010023259800a518a4d136564004ae69,
        },
    }

    output {
        to: Sender,
        amount: source - Ada(quantity) - fees,
    }
}